<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         point="org.eclipse.ui.editors">
      <editor
            name="Gosh Template Editor"
            icon="icons/sample.gif"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            class="ronnie.gosh.editors.template.TemplateEditor"
            id="ronnie.gosh.editors.template.TemplateEditor">
			<contentTypeBinding
				contentTypeId="ronnie.gosh.groovytemplatesource" />
      </editor>
   </extension>
   <extension
         point="org.eclipse.core.filebuffers.documentSetup">
      <participant
            class="ronnie.gosh.editors.template.DocumentSetupParticipant"
            contentTypeId="ronnie.gosh.groovytemplatesource">
      </participant>
   </extension>
   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.core.runtime.text"
            default-charset="UTF-8"
            file-extensions="gtext,ghtml"
            id="ronnie.gosh.groovytemplatesource"
            name="Gosh Template"
            priority="high">
      </content-type>
   </extension>

</plugin>
